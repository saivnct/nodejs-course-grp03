#init project
npm init

#install nodemon for dev purpose
npm install nodemon --save-dev

#install express.js
npm install express@4

#install morgan - http logger
npm install morgan


#install dotenv - read environment variables via a .env file
npm install dotenv

#tedious is the implementation of the TDS protocol which the driver uses to communicate to SQL Server
npm install tedious
#using mssql as wrapper of tedious
#mssql has built-in SQL injection protection. Always use parameters or tagged template literals to pass sanitized values to your queries.
npm install mssql


#URL with query param:
http://localhost:9001/api/v1/tours?duration[gte]=5&duration[lt]=8&price[lt]=500&price[gt]=100
for params of type number:
        ex: price[gt]=100

            price[eq]=100
            price=100

    gt: greater than
    gte: greater than or equal
    lt: less than
    lte: less than or equal
    eq: equal

for params of type string:
        ex: difficulty=easy
